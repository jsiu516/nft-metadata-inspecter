{
  "compilerOptions": {
    "module": "commonjs",
    "moduleResolution": "node",
    "pretty": true,
    "target": "es2021",
    "lib": ["dom", "es2021"],
    "sourceMap": true,
    "outDir": "./dist",
    "allowJs": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["./*"],
      "@util/*": ["./src/utils/*"],
      "@api/*": ["./src/api/*"],
      "@type/*": ["./src/types/*"],
      "@common/*": ["./src/common/*"]
    }
  },
  "include": ["module.d.ts", "src/**/*", "test/**/*", "env"],
  "exclude": ["node_modules"]
}
